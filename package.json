{
	"name": "@emilo/requestify",
	"version": "0.0.1-alpha",
	"description": "Requestify is a lightweight Node.js HTTP framework for building server routes with full TypeScript support.",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/entry.cjs",
	"module": "./dist/entry.mjs",
	"exports": {
		".": {
			"require": {
				"types": "./dist/entry.d.cts",
				"default": "./dist/entry.cjs"
			},
			"import": {
				"types": "./dist/entry.d.mts",
				"default": "./dist/entry.mjs"
			}
		}
	},
	"scripts": {
		"build": "tsdown src/entry.ts --format esm --format cjs --dts --minify"
	},
	"keywords": [
		"requestify"
	],
	"author": "EMILO9",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"tsdown": "^0.17.1",
		"utility-types": "^3.11.0"
	},
	"dependencies": {
		"joi": "^18.0.2",
		"path-to-regexp": "^8.3.0"
	}
}
